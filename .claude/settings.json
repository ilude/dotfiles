{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(bash:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(date:*)",
      "Bash(diff:*)",
      "Bash(docker pull:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git add:*)",
      "Bash(git config:*)",
      "Bash(git init:*)",
      "Bash(git log:*)",
      "Bash(git reset:*)",
      "Bash(git rm:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(printf:*)",
      "Bash(pwd:*)",
      "Bash(python:*)",
      "Bash(test:*)",
      "Bash(timeout:*)",
      "Bash(tree:*)",
      "Bash(type:*)",
      "Bash(uname:*)",
      "Bash(which:*)",
      "Bash(whoami:*)",
      "Edit",
      "Read",
      "Read(//c/tmp/**)",
      "Read(//c/Users/m*/.claude/**)",
      "Read(~/**)",
      "Skill",
      "SlashCommand",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebFetch(domain:code.claude.com)",
      "WebSearch",
      "Write"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/hooks/sync-claude-config.sh\""
          },
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/hooks/ensure-mcp-config.sh\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "pwsh -NoProfile -Command \"$input | & \\\"$env:USERPROFILE\\.claude\\claude-status.ps1\\\"\""
  },
  "alwaysThinkingEnabled": true
}
