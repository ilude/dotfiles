{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "SHELL": "C:\\Program Files\\Git\\usr\\bin\\bash.exe"
  },
  "_version_pin": {
    "pinned": "2.1.42",
    "reason": "2.1.45+ causes CMD window focus stealing on Windows (every tool call/hook spawns visible console window)",
    "tracking": "https://github.com/anthropics/claude-code/issues/14828",
    "related": ["#26481 (Bash exit 1 / onecmd)", "#26610 (session env not supported)", "#26746 (hook paths broken)"],
    "action": "Remove DISABLE_AUTOUPDATER and this block once #14828 is fixed"
  },
  "includeCoAuthoredBy": false,
  "enableAllProjectMcpServers": false,
  "permissions": {
    "allow": [],
    "deny": [
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~/*:*)",
      "Bash(sudo rm -rf:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=* of=/dev/*:*)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.docker/config.json)",
      "Read(~/.npmrc)",
      "Read(~/.pypirc)",
      "Read(~/.git-credentials)",
      "Read(~/.config/gh/**)",
      "Edit(~/.bashrc)",
      "Edit(~/.zshrc)",
      "Edit(~/.bash_profile)",
      "Edit(~/.profile)"
    ],
    "ask": [
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/team-cleanup.sh",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/git-pull-check.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/damage-control/bash-tool-damage-control.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/path-normalization/path-normalization-hook.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/damage-control/edit-tool-damage-control.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/path-normalization/path-normalization-hook.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/damage-control/write-tool-damage-control.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/quality-validation/quality_validation_hook.py",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/quality-validation/quality_validation_hook.py",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/session-history/session_history_hook.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/notify/notification-sound.py",
            "timeout": 2
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash $HOME/.claude/claude-status"
  },
  "enabledPlugins": {
    "handbook-git-worktree@cc-handbook": true,
    "handbook-glab@cc-handbook": true,
    "aws-cdk@aws-skills": true,
    "aws-cost-ops@aws-skills": true,
    "serverless-eda@aws-skills": true,
    "aws-agentic-ai@aws-skills": true,
    "superpowers@superpowers-marketplace": true
  },
  "alwaysThinkingEnabled": true,
  "companyAnnouncements": [],
  "skipDangerousModePermissionPrompt": true,
  "effortLevel": "medium"
}
