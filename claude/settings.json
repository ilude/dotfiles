{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(bash:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(date:*)",
      "Bash(diff:*)",
      "Bash(docker pull:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git add:*)",
      "Bash(git config:*)",
      "Bash(git init:*)",
      "Bash(git log:*)",
      "Bash(git reset:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(printf:*)",
      "Bash(pwd:*)",
      "Bash(python:*)",
      "Bash(test:*)",
      "Bash(timeout:*)",
      "Bash(tree:*)",
      "Bash(type:*)",
      "Bash(uname:*)",
      "Bash(which:*)",
      "Bash(whoami:*)",
      "Edit",
      "Read",
      "Read(//c/tmp/**)",
      "Read(//c/Users/m*/.claude/**)",
      "Read(~/**)",
      "Skill",
      "SlashCommand",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebFetch(domain:code.claude.com)",
      "WebSearch",
      "Write"
    ],
    "deny": [
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~/*:*)",
      "Bash(sudo rm -rf:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=* of=/dev/*:*)"
    ],
    "ask": [
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/ensure-mcp-config.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'uv run $HOME/.claude/hooks/damage-control/bash-tool-damage-control.py'",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'uv run $HOME/.claude/hooks/path-normalization/path-normalization-hook.py'",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bash -c 'uv run $HOME/.claude/hooks/damage-control/edit-tool-damage-control.py'",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'uv run $HOME/.claude/hooks/path-normalization/path-normalization-hook.py'",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bash -c 'uv run $HOME/.claude/hooks/damage-control/write-tool-damage-control.py'",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'uv run $HOME/.claude/hooks/session-history/session_history_hook.py'",
            "timeout": 5
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -l -c 'python $HOME/.claude/hooks/notify/notification-sound.py'",
            "timeout": 2
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/claude-status"
  },
  "enabledPlugins": {
    "handbook-git-worktree@cc-handbook": true,
    "handbook-glab@cc-handbook": true,
    "aws-cdk@aws-skills": true,
    "aws-cost-ops@aws-skills": true,
    "serverless-eda@aws-skills": true,
    "aws-agentic-ai@aws-skills": true
  },
  "alwaysThinkingEnabled": true,
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "companyAnnouncements": []
}
